rule "Ambilight turn on at Twilight"
	when 
            //Item Twilight.state == ON
		    Time cron "0 0/1 * * * ?" //every 5 minutes check set ambilight
		    
	then
        if (PhilipsTV_Ambilight_Power.state == OFF && PhilipsTV_Power.state == ON && Twilight.state == ON )    //|| Ambilight.state == NULL
		{
			PhilipsTV_Ambilight_Power.sendCommand(ON)
			//sendTelegram("redminote7", "TV Salon : Ambilight going ON")
			//executeCommandLine("/etc/openhab2/scripts/AmbilightFollowVideo.sh")
		} 
	
		if (PhilipsTV_Power.state == ON && Daylight.state == ON && PhilipsTV_Ambilight_Power.state == ON )
		{
           // executeCommandLine("/etc/openhab2/scripts/AmbilightTurnOff.sh")
			PhilipsTV_Ambilight_Power.sendCommand(OFF)
			//sendTelegram("redminote7", "TV Salon : Ambilight going OFF")

		}


end

